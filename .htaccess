ErrorDocument 400 /error.html
ErrorDocument 401 /error.html
ErrorDocument 403 /error.html
ErrorDocument 404 /error.html
ErrorDocument 500 /error.html


RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php 

Options -Indexes
 RewriteEngine on
 RewriteCond %{REQUEST_URI} ^.*/developer/.*$
 RewriteRule .*$ http://localhost/GuruSchool/error.html

RewriteCond %{QUERY_STRING} ^(%2d|-)[^=]+$ [NC]
RewriteRule ^(.*) $1? [L]

<IfModule php5_module>
    php_flag session.cookie_httponly on
</IfModule>

# Evita que se enmarque la pagina en el iframe de otro sitio
Header set X-Frame-Options DENY
# Protecci√≥n contra Ataques XSS
Header set X-XSS-Protection "1; mode=block"
# No permitimos que se ejecute javascript externo y nos da una capa de refuerzo contra ataques XSS
# Don't allow inline JavaScript to run.
Header set X-Content-Security-Policy "allow 'self';"
# Previene mime ataques
Header set X-Content-Type-Options "nosniff"
